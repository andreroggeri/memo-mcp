{
  "name": "memo-mcp",
  "version": "1.0.0",
  "description": "MCP Server for integrating with self-hosted Memo API (usememos.com)",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "memo-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "prepare": "husky",
    "lint": "eslint .",
    "gen:api": "./scripts/generate-client.sh",
    "fetch:protos": "./scripts/fetch-protos.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreroggeri/memo-mcp.git"
  },
  "keywords": [
    "mcp",
    "memo",
    "memos",
    "model-context-protocol",
    "ai",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andreroggeri/memo-mcp/issues"
  },
  "homepage": "https://github.com/andreroggeri/memo-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "axios": "^1.13.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.2.3",
    "husky": "^9.1.7",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.0",
    "long": "^5.3.2",
    "prettier": "^3.6.2",
    "protobufjs": "^8.0.0",
    "testcontainers": "^11.0.0",
    "ts-proto": "^2.11.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}